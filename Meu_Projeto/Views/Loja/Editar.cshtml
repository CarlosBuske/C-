@model Meu_Projeto.Models.Produtos
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Loja", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.Label("Codigo")
    <br />
    @Html.TextBoxFor(x => x.Id, new { @readonly = "readonly" })
    <br />
    @Html.ValidationMessageFor(x => x.Id)
    <br />

    @Html.Label("Nome Produto")
    <br />
    @Html.TextBoxFor(x => x.Nome)
    <br />
    @Html.ValidationMessageFor(x => x.Nome)
    <br />

    @Html.Label("Descrição")
    <br />
    @Html.TextBoxFor(x => x.Descricao)
    <br />
    @Html.ValidationMessageFor(x => x.Descricao)
    <br />

    @Html.Label("Valor")
    <br />
    @Html.TextBoxFor(x => x.Valor)
    <br />
    @Html.ValidationMessageFor(x => x.Valor)
    <br />

    @Html.Label("Tipo")
    <br />
    @Html.TextBoxFor(x => x.Tipo)
    <br />
    @Html.ValidationMessageFor(x => x.Tipo)
    <br />

    @Html.Label("Marca")
    <br />
    @Html.TextBoxFor(x => x.Marca)
    <br />
    @Html.ValidationMessageFor(x => x.Marca)
    <br />

    @Html.Label("Modelo")
    <br />
    @Html.TextBoxFor(x => x.Modelo)
    <br />
    @Html.ValidationMessageFor(x => x.Modelo)
    <br />


    <br />
    <input type="submit" value="Salvar" />
}



@section Lateral{
    @{ if (Session["Logado"].Equals("Admin"))
        {
            @Html.Partial("_LateralAdmin")
        }

    }
}
